---
// Default title, can be overridden by individual pages
export interface Props {
	title?: string;
}

const { title = "SolarPunk Club" } = Astro.props; // Updated default title
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/global.css">
  </head>
  <body>
    <header>
      <img src="/images/logo.svg" alt="SolarPunk Site Logo" id="logo" />
    </header>
    <slot />
  </body>
</html>
<style>
  body {
    background-image: url('/images/solarpunk-bg.jpg');
    background-size: cover;
    background-attachment: fixed;
    background-repeat: no-repeat;
    margin: 0; /* Remove default margin */
    padding: 0; /* Remove default padding */
    font-family: 'Roboto', sans-serif; /* Consistent font */
  }

  header {
    background-color: rgba(255, 255, 255, 0.8); /* Semi-transparent white */
    padding: 1em;
    text-align: center; /* Center logo for now */
  }

  #logo {
    height: 50px;
    margin: 0.5em;
  }
</style>
